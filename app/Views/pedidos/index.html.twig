{% extends 'layouts/main.html.twig' %}

{% block title %}Consulta de Pedidos{% endblock %}

{% block content %}
<h1>Lista de Pedidos</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Status</th>
            <th>Data e hora de envio</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for pedido in pedidos %}
        <tr>
            <td>{{ pedido.id }}</td>
            <td>{{ pedido.cliente }}</td>
            <td>{{ pedido.status }}</td>
            <td>{{ pedido.data_envio|date("d/m/Y H:i") }}</td>
            <td>
                <a href="/pedido/{{ pedido.id }}" title="Ver detalhes">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="/pedido/editar/{{ pedido.id }}" title="Editar pedido">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/pedido/deletar/{{ pedido.id }}" title="Remover pedido" onclick="return confirm('Tem certeza que deseja remover este pedido?');">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Nenhum pedido encontrado.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
