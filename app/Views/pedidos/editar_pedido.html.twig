{% extends 'layouts/main.html.twig' %}

{% block title %}Editar Pedido{% endblock %}

{% block content %}
<div class="edit-order-container">
    <h1 class="edit-order-title">Editar Pedido #{{ pedido.id }}</h1>

    <form action="/pedido/atualizar/{{ pedido.id }}" method="POST" class="edit-order-form">
        <div class="form-group">
            <label for="cliente" class="form-label">Cliente:</label>
            <input type="text" id="cliente" name="cliente" value="{{ pedido.cliente }}" required class="form-input">
        </div>

        <div class="form-group">
            <label for="status" class="form-label">Status:</label>
            <select id="status" name="status" required class="form-select">
                <option value="pendente" {% if pedido.status == 'pendente' %}selected{% endif %}>Pendente</option>
                <option value="enviado" {% if pedido.status == 'enviado' %}selected{% endif %}>Enviado</option>
                <option value="entregue" {% if pedido.status == 'entregue' %}selected{% endif %}>Entregue</option>
            </select>
        </div>

        <div class="form-group">
            <label for="data_envio" class="form-label">Data de Envio:</label>
            <input type="date" id="data_envio" name="data_envio" value="{{ pedido.data_envio|date('Y-m-d') }}" required class="form-input">
        </div>

        <div class="form-group">
            <button type="submit" class="form-button">Atualizar Pedido</button>
        </div>
    </form>

    <a href="/" class="back-link">Voltar Ã  lista de pedidos</a>
</div>
{% endblock %}
